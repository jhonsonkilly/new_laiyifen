<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <ImageView
        android:id="@+id/iv_headlines"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:src="@drawable/icon_saas_headlines"/>

    <ImageView
        android:id="@+id/yizai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/iv_headlines"
        android:src="@drawable/home_news_yizai"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:src="@drawable/close"
        android:textSize="13sp"
        android:visibility="gone"/>

    <View
        android:id="@+id/view_divider"
        android:layout_width="1dp"
        android:layout_height="32dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/yizai"
        android:background="@color/divider_color"/>

    <TextView
        android:id="@+id/tv_isapply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="9dp"
        android:layout_toRightOf="@+id/view_divider"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="[推荐]"
        android:textColor="@color/main_title_color"
        android:textSize="13sp"
        tools:text="adfasd"/>

    <LinearLayout
        android:id="@+id/newBg"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/yizai"
        android:background="@drawable/home_news_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_news"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@drawable/home_ic_news"
            android:visibility="visible"/>

        <FrameLayout
            android:id="@+id/bannerFl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_banner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/main_title_color"
                android:textSize="13sp"
                tools:text="sdaadada"/>

            <TextView
                android:id="@+id/tv_banner2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/main_title_color"
                android:textSize="13sp"
                tools:text="adadfasdfasdfadfasd"/>
        </FrameLayout>

        <View
            android:id="@+id/view_divider_2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="6dp"
            android:background="@color/divider_color"/>

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="9dp"
            android:gravity="center"
            android:text="更多"
            android:textColor="@color/theme_color"
            android:textSize="13sp"/>
    </LinearLayout>
</RelativeLayout>