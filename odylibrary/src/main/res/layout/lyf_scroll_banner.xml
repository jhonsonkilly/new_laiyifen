<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    >
    <ImageView
        android:id="@+id/iv_headlines"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:src="@drawable/home_news" />

    <View
        android:id="@+id/view_line"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/iv_headlines"
        android:layout_marginLeft="12dp"
        android:background="@color/line_color"
        />

    <LinearLayout
        android:id="@+id/ll_banner2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/view_line"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >
            <TextView
                android:id="@+id/tv_text_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/main_title_color"
                android:singleLine="true"
                android:text=""
                android:layout_marginRight="12dp"
                android:drawableLeft="@drawable/home_ic_news"
                android:drawablePadding="6dp"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/tv_text_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:textColor="@color/main_title_color"
                android:singleLine="true"
                android:text=""
                android:layout_marginRight="12dp"
                android:drawableLeft="@drawable/home_ic_news"
                android:drawablePadding="6dp"
                android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_banner1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_toRightOf="@id/view_line"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="12dp"
        >
            <TextView
                android:id="@+id/tv_text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/main_title_color"
                android:singleLine="true"
                android:textSize="13sp"
                android:drawableLeft="@drawable/home_ic_news"
                android:drawablePadding="6dp"
                android:layout_marginRight="12dp"
                android:text=""/>
            <TextView
                android:id="@+id/tv_text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/main_title_color"
                android:singleLine="true"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/home_ic_news"
                android:drawablePadding="6dp"
                android:text=""
                android:layout_marginRight="12dp"
                android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>