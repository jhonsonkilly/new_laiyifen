<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_shopcart_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/circular_topbead_border"
        android:gravity="center"
        android:text="@string/guanzhu"
        android:textColor="@color/main_title_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_shopcart_dialog_confirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/circular_bottombead_border"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/theme_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_shopcart_dialog_cancle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/circular_bead_border"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/textColor_blue"
        android:textSize="16sp" />
</LinearLayout>
