<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_lesssearch"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:visibility="visible">

    <ImageView
        android:id="@+id/iv_caveat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_caveat" />

    <TextView
        android:id="@+id/tv_lesssearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_caveat"
        android:text="@string/cannot_search_product"
        android:textColor="@color/main_title_color" />

    <com.ody.p2p.search.searchkey.flowTagLayout.FlowTagLayout
        android:id="@+id/flow_re"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/iv_caveat"
        android:layout_marginTop="10dp"/>
</RelativeLayout>
