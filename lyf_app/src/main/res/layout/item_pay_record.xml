<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_55"
    android:orientation="vertical"
    android:paddingLeft="@dimen/height_16"
    android:paddingRight="@dimen/height_16">

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!--充值记录item-->
        <TextView
            android:id="@+id/item_record_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sdfa"
            android:textColor="@color/main_title_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/item_record_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_record_type_name"
            android:layout_marginTop="6dp"
            android:text="sdfa"
            android:textColor="@color/grey_text_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/item_record_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="sdfa"
            android:textColor="@color/main_title_color"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/fresh_bg_color" />
</RelativeLayout>