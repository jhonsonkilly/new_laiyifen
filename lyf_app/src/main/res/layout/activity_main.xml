<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sub_title_color">

    <FrameLayout
        android:id="@+id/fl_bottom"
        android:layout_width="match_parent"

        android:layout_height="55dp"
        android:layout_alignParentBottom="true">

        <com.ody.p2p.views.tablayout.TabChooser
            android:id="@+id/tab_bar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/img_select_two"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/select_home_center" />

    </FrameLayout>


    <View
        android:id="@+id/view_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/fl_bottom"
        android:background="@color/divider_color" />

    <FrameLayout
        android:id="@+id/centerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/view_bottom_line" />


    <TextView

        android:visibility="gone"
        android:id="@+id/tv_dev"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:background="@color/black"
        android:text="测试"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
