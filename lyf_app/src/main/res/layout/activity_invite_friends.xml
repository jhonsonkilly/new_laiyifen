<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_44">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/distance_12"
            android:src="@drawable/icon_back" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear_title"
        android:layout_marginBottom="@dimen/height_44"
        android:layout_marginLeft="@dimen/distance_12"
        android:layout_marginRight="@dimen/distance_12"
        android:layout_marginTop="@dimen/distance_25"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/linear_screen_capture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear_title"
        android:layout_marginBottom="@dimen/height_44"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/distance_12"
        android:paddingRight="@dimen/distance_12">

        <com.ody.p2p.views.CircleImageView
            android:id="@+id/img_uer_pic"
            android:layout_width="@dimen/distance_50"
            android:layout_height="@dimen/distance_50" />

        <TextView
            android:id="@+id/tv_uer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_6"
            android:textColor="@color/main_title_color"
            android:textSize="@dimen/text_size_16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_12"
            android:src="@drawable/logo2" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginTop="@dimen/distance_16"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_own_poster"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:src="@drawable/poster" />

            <ImageView
                android:id="@+id/img_QR"
                android:layout_width="@dimen/distance_90"
                android:layout_height="@dimen/distance_90"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_invite_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inite_you_join"
            android:textColor="@color/grey_text_color" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_save_qr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_44"
        android:layout_alignParentBottom="true"
        android:background="@color/theme_color"
        android:gravity="center"
        android:text="保存我的二维码"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_18sp" />
</RelativeLayout>
