<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_12"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:background="@color/e5e5e5"
    android:orientation="vertical">
    <!--优惠券列表的item布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_27"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_coupon_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥10"
                android:textColor="@color/rectangle_bead"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/item_coupon_present"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFB400"
                android:padding="@dimen/dp_4"
                android:visibility="gone"
                android:text="赠送好友"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_coupon_used"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单满99使用"
                android:textColor="@color/main_title_color"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/item_coupon_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_9"
                android:text="不限购买品类"
                android:textColor="@color/sub_title_color"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/item_coupon_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_9"
                android:text="2015.2.4-2012-3-3-3-3-3"
                android:textColor="#939191"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_coupon_tag_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/coupon_icon_expired" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_22"

        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_coupon_showmore"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:background="@drawable/common_btn_arrow_greydown" />

        <TextView
            android:id="@+id/item_coupon_rule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="优惠券使用规则优惠券使用规则优惠券使用规则优惠券使用规则优惠券使用规则优惠券使用规则"
            android:textColor="@color/sub_title_color"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>