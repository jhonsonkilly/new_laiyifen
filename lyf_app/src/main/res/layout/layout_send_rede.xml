<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"

              android:layout_height="fill_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/luckRed"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/red_select1"
            android:gravity="center"
            android:padding="5dp"
            android:text="拼手气红包"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16sp"/>

        <TextView
            android:id="@+id/normalRed"

            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/red_select4"
            android:gravity="center"
            android:padding="5dp"
            android:text="普通红包"
            android:textColor="@color/cfff58c5b"
            android:textSize="@dimen/text_size_16sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="红包个数"
            android:textColor="@color/c787878"
            android:textSize="@dimen/text_size_14sp"/>

        <TextView
            android:id="@+id/tv2"
            android:textSize="@dimen/text_size_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="个"
            android:textColor="@color/c787878"/>

        <EditText
            android:id="@+id/number"
            android:textSize="@dimen/text_size_18sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv2"
            android:layout_toRightOf="@id/left"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:numeric="integer"
            android:textColor="@color/c787878"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/allAmountTile"
            android:textSize="@dimen/text_size_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="单个金额"
            android:textColor="@color/c787878"/>

        <TextView
            android:id="@+id/tv1"
            android:textSize="@dimen/text_size_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="元"
            android:textColor="@color/c787878"/>

        <EditText
            android:id="@+id/amount"
            android:textSize="@dimen/text_size_18sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv1"
            android:layout_toRightOf="@id/allAmountTile"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:numeric="decimal"
            android:textColor="@color/c787878"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="每人可领1个，金额随机且不超过200元"
        android:textColor="@color/c787878"
        android:textSize="12sp"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/sayText"
        android:textSize="14sp"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="恭喜发财，大吉大利！"
        android:paddingLeft="20dp"
        android:textColor="@color/cfff58c5b"/>

    <TextView
        android:id="@+id/allMoney"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="￥0.00"
        android:textColor="@color/cfff58c5b"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/sendRed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_noregister"
        android:enabled="false"
        android:gravity="center"
        android:text="塞钱进红包"
        android:textColor="@color/white"
        android:textSize="18sp"/>



</LinearLayout>