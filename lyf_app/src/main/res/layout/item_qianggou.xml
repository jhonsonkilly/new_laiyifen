<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_detail"
    android:layout_width="match_parent"
    android:layout_height="120dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/common_img_horizontal_number_1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"

                />


        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:id="@+id/common_lllayout_horizontal_number_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/common_tv_horizontal_number_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_max_grey"
                    android:textSize="15dp"
                    tools:text="123" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


                <ImageView
                    android:id="@+id/common_img_horizontal_number_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/common_lllayout_horizontal_number_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/common_lllayout_horizontal_number_1"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/common_btn_horizontal_number_3"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/theme_color"
                    android:textSize="17dp"
                    tools:text="111" />

                <TextView
                    android:id="@+id/common_btn_horizontal_number_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/text_med_grey"
                    android:textSize="13dp"
                    tools:text="111" />


            </LinearLayout>


            <ProgressBar
                android:id="@+id/progress"
                style="@style/ProgressBar_Mini"

                android:layout_width="100dp"
                android:layout_height="4dp"
                android:layout_below="@id/common_lllayout_horizontal_number_4"
                android:layout_marginTop="10dp"
                android:progress="100" />


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="6dp">


                <TextView
                    android:id="@+id/common_btn_horizontal_number_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme_color"
                    android:textSize="14dp"
                    tools:text="111" />

                <TextView
                    android:id="@+id/common_btn_horizontal_number_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_min_grey"
                    android:textSize="16dp"
                    android:visibility="gone"
                    tools:text="111" />


            </FrameLayout>


            <LinearLayout


                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <TextView

                    android:textColor="@color/app_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:text="限抢一件"
                    android:textSize="@dimen/text_med_14" />

                <TextView
                    android:layout_marginTop="3dp"
                    android:id="@+id/common_btn_horizontal_number_6"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:background="@color/theme_color"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    tools:text="111" />


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/common_bg" />


</RelativeLayout>