<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"

            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@id/common_btn_1"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_grey_line_white_bg"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="取消订单"
                android:textColor="@color/text_med_grey"
                android:textSize="@dimen/text_min_12"
                android:visibility="gone" />

            <TextView
                android:id="@id/common_btn_2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_grey_line_white_bg"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="删除订单"
                android:textColor="@color/text_med_grey"
                android:textSize="@dimen/text_min_12"
                android:visibility="gone" />

            <TextView
                android:id="@id/common_btn_3"

                android:layout_width="60dp"
                android:layout_height="30dp"

                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_grey_line_white_bg"
                android:gravity="center"
                android:textColor="@color/text_med_grey"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"

                android:text="查看物流"
                android:textSize="@dimen/text_min_12"
                android:visibility="gone" />

            <TextView
                android:id="@id/common_btn_4"

                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_grey_line_orange"
                android:gravity="center"

                android:textColor="@color/app_color"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"

                android:text="去评价"
                android:textSize="@dimen/text_min_12"
                android:visibility="gone" />

            <TextView
                android:id="@id/common_btn_5"

                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_grey_line_orange"
                android:gravity="center"

                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/theme_color"


                android:text="确认收货"
                android:textSize="@dimen/text_min_12"
                android:visibility="gone" />

            <TextView
                android:id="@id/common_btn_6"
                android:textColor="@color/text_med_grey"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_grey_line_white_bg"
                android:gravity="center"

                android:paddingLeft="5dp"
                android:paddingRight="5dp"

                android:text="去支付"
                android:textSize="@dimen/text_min_12"
                android:visibility="gone" />

            <TextView
                android:id="@id/common_btn_7"

                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_grey_line_orange"
                android:gravity="center"

                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/app_color"

                android:text="再次购买"
                android:textSize="@dimen/text_min_12"
                android:visibility="gone" />


        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>