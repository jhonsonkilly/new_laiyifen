<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/C515253">

    <LinearLayout
        android:id="@id/common_lllayout_horizontal_number_1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/app_color"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@id/common_rllayout_horizontal_number_1"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="bottom"
            android:layout_weight="1">

            <LinearLayout
                android:id="@id/common_lllayout_horizontal_number_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/common_tv_vertical_number_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_med_15"/>


                <TextView
                    android:id="@id/common_tv_vertical_number_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="闪购"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_med_15"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@id/common_rllayout_horizontal_number_2"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@color/white">

            <LinearLayout
                android:id="@id/common_lllayout_horizontal_number_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/common_tv_vertical_number_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="明日"
                    android:textColor="@color/text_min_grey"
                    android:textSize="@dimen/text_med_15"/>

                <ImageView
                    android:id="@id/common_img_horizontal_number_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shap_point_grey"/>

                <TextView
                    android:id="@id/common_tv_vertical_number_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预告"
                    android:textColor="@color/text_min_grey"
                    android:textSize="@dimen/text_med_15"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>




    <android.support.v4.view.ViewPager
        android:id="@id/common_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/common_lllayout_horizontal_number_1"/>

