<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/ll_item"
    android:background="@drawable/store_get_coupon_bg_yellow"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_coupon_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginBottom="2dp"
            android:textSize="18sp"
            android:text="$10"/>

        <TextView
            android:id="@+id/tv_coupon_full_cut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginBottom="2dp"
            android:text="订单满99使用"/>

        <TextView
            android:id="@+id/tv_coupon_unlimited_purchase"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="不限共买品类"/>

        <TextView
            android:id="@+id/tv_coupon_valid_date"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:text="2015.12.23-2016.12.25"/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:src="@drawable/store_detail_popup_dashed"/>

    <TextView
        android:id="@+id/tv_coupon_status"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="立即\n领取"/>

</LinearLayout>