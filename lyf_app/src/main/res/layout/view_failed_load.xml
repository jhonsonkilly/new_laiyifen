<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_notdataH5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:src="@drawable/failed_to_load" />

    <TextView
        android:id="@+id/tv_faild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="您的网络不给力，请检查后稍后再试"
        android:textColor="@color/note_color"
        android:textSize="12sp" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_theme_4"
        android:gravity="center"
        android:text="重试"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>
