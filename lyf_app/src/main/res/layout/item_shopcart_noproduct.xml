<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shopcart_data_null"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="145dp"
        android:layout_height="130dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/icon_no_commodity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/no_product_inshopcart"
        android:textColor="@color/sub_title_color"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/txt_goshop"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circular_themecolor"
        android:gravity="center"
        android:text="@string/visit_the"
        android:textColor="@color/button_text_color"
        android:textSize="16sp" />

</LinearLayout>
