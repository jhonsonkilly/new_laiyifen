<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/create_chat_bg"
    android:orientation="vertical"
    tools:context="com.netease.nim.demo.chatroom.activity.CreateChatRoomActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/arrows_back"
            android:gravity="center"
            android:padding="10dp"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </RelativeLayout>


    <com.netease.nim.uikit.common.ui.imageview.HeadImageView
        android:id="@+id/avatar"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:src="@drawable/head_icon_1"/>


    <TextView
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="萌萌 创建此聊天室"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="身边朋友输入4位相同密码,可进入聊天室"
        android:textColor="@color/gray_text"
        android:textSize="16sp"/>

    <EditText
        android:textColorHint="@color/gray_text"
        android:id="@+id/edit_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_card_bac_radius"
        android:gravity="center"
        android:hint="设置进入密码"
        android:inputType="numberDecimal"
        android:maxLength="4"
        android:padding="15dp"
        android:textColor="@color/gray_text"
        android:textSize="18sp"/>

    <EditText
        android:textColorHint="@color/gray_text"
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_card_bac_radius"
        android:gravity="center"
        android:hint="设置聊天名称"
        android:padding="15dp"
        android:textColor="@color/gray_text"
        android:textSize="18sp"/>

    <TextView
        android:visibility="invisible"
        android:text="您已有聊天室，设置后将更新"
        android:id="@+id/remind"
        android:textSize="16sp"
        android:padding="10dp"
        android:textColor="@color/jrmf_rp_red"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/enter_into"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape_card_red_radius"
        android:text="进入聊天室"
        android:textColor="@color/white"
        android:textSize="18sp"/>
</LinearLayout>
