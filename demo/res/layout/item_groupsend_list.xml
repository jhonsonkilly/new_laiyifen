<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/list_item_bg_selecter"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_marginTop="1dip"
        android:gravity="center_vertical"
        android:minHeight="71dip">

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="@dimen/dialog_padding_vertical"
            android:layout_height="@dimen/dialog_padding_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_nocheck"/>

        <com.netease.nim.uikit.common.ui.imageview.HeadImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/avatar_size_in_session"
            android:layout_height="@dimen/avatar_size_in_session"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@id/img_head"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/avatar_size_in_session"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/img_head"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/avatar_size_in_session"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/img_head"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/avatar_size_in_session"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/img_head"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                />
        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/bottom_line"
        style="@style/horizontal_light_thin_divider"
        android:layout_marginLeft="0dip"/>

</LinearLayout>