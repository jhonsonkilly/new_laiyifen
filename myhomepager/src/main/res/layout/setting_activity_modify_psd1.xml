<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include layout="@layout/myhome_pager_head" />

    <!--中间一块-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_modify_psd1"
        android:orientation="vertical">
        <!--手机号和图标-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_130">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >

                <ImageView
                    android:id="@+id/iv_phone_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/iconfont_shouji" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_phone_logo"
                    android:layout_marginTop="10dp"
                    android:textColor="#ff9f00"
                    android:textSize="@dimen/textsize_14sp" />
            </RelativeLayout>
        </RelativeLayout>

        <!--分割线-->
        <View
            android:background="@color/divider_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <!--验证码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/et_input_validate_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/input_validate_code"
                android:textColorHint="@color/edittext_hint_color"
                android:inputType="phone"
                android:maxLines="1"
                android:maxLength="6"
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:textColor="@color/main_title_color"
                android:textSize="@dimen/textsize_14sp"
                />

            <ImageView
                android:id="@+id/iv_cha"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:visibility="invisible"
                android:src="@drawable/my_btn_close_n" />

            <!--分割线-->
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/divider_color"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_get_validate_code"
                android:layout_width="@dimen/height_130"
                android:layout_height="match_parent"
                android:text="@string/get_validate_code"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/textsize_14sp"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

    <!--下一步
    android:background="@drawable/selector_modify_psd1"
    -->
    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:background="@drawable/shape_cannot_click"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>
